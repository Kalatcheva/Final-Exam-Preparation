using System;

class Program
{
    static void Main(string[] args)
    {
        int taxPrice = int.Parse(Console.ReadLine());
        double ShoePrice = taxPrice - (taxPrice * 0.4);
        double sportsWearPrice = ShoePrice - (ShoePrice * 0.2);
        double ballPrice = sportsWearPrice / 4;
        double sportAccPrice = ballPrice / 5;
        double finalPrice = taxPrice + ShoePrice + sportsWearPrice + ballPrice + sportAccPrice;
        Console.WriteLine($"{finalPrice:f2}");




    }
}
